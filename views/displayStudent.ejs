<!DOCTYPE html>
<html lang="en">
<head>
  <title>Fetch using MySQL and Node.js</title>
</head>
<body>
    <div class="table-data">
<h2>Display Data</h2>
    <table border="1">
        <tr>
            <th>S.N</th>
            <th>Full Name</th>
            <th>address</th>
            <th>email</th>
            <th>course</th>
            <th>department</th>
            <th>sports</th>
            
        </tr>
        <%
        if(userData.length!=0){
        var i=1;
        userData.forEach(function(data){
        %>
        <tr>
            <td><%=i; %></td>
            <td><%=data.first_name %></td>
            <td><%=data.address %></td>
            <td><%=data.email %></td>
            <td><%=data.Mycourses %></td>
            <td><%=data.departmentName %></td>
            <td><%=data.sportsName %></td>
        </tr>
        <%  i++; }) %>
        <% } else{ %>
            <tr>
                <td colspan="7">No Data Found</td>
            </tr>
        <% } %>
    </table>
    </div>
     <div> 
         <!-- <button><a href="/showCourses?id=<%=userData[0].student_id %>">Show Courses Opted</a></button> -->

         
         
     </div>
</body>
</html>